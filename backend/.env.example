# LAYERS Backend Environment Variables
# Copy this to .env and fill in your values

# ============ App Settings ============
APP_NAME=LAYERS
APP_VERSION=0.1.0
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-123456789

# ============ Database ============
DATABASE_URL=postgresql+asyncpg://layers_admin:your_password@localhost:5433/layers_db
# For sync operations (Alembic)
DATABASE_URL_SYNC=postgresql://layers_admin:your_password@localhost:5433/layers_db

# ============ Redis ============
REDIS_URL=redis://localhost:6379/0

# ============ JWT Settings ============
JWT_SECRET_KEY=another-super-secret-key-for-jwt-tokens
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============ MinIO / S3 ============
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=layers_minio
MINIO_SECRET_KEY=layers_minio_secret
MINIO_BUCKET_NAME=layers-files
MINIO_SECURE=False

# ============ Firebase (Push Notifications) ============
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json

# ============ Geo Settings ============
# Default radius in meters for nearby queries
DEFAULT_NEARBY_RADIUS=1000
# Geo-lock radius for artifact access
GEO_LOCK_RADIUS=50
# Anti-cheat: Max distance per second (meters)
MAX_SPEED_MPS=1389  # ~5000 km/h = impossible

# ============ Rate Limits ============
ARTIFACTS_PER_DAY=3
MIN_DISTANCE_BETWEEN_ARTIFACTS=20

# ============ Slow Mail ============
SLOW_MAIL_MIN_DELAY_HOURS=6
SLOW_MAIL_MAX_DELAY_HOURS=12
